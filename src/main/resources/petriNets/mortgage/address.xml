<?xml version="1.0" encoding="UTF-8"?>
<document xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../petriflow_schema.xsd">
    <data type="text">
        <id>street</id>
        <title>Street</title>
    </data>
    <data type="text">
        <id>streetnumber</id>
        <title>Street Number</title>
    </data>
    <data type="text">
        <id>postal</id>
        <title>Postal code</title>
    </data>
    <data type="enumeration">
        <id>city</id>
        <title>City</title>
    </data>
    <data type="enumeration">
        <id>type</id>
        <title>Property</title>
        <values>House</values>
        <values>Flat</values>
        <values>Apartment</values>
        <values>Cottage</values>
        <init>House</init>
    </data>
    <transition>
        <id>address_and_mortgage</id>
        <x>50</x>
        <y>50</y>
        <label>Address and type of mortgage</label>
        <dataRef>
            <id>street</id>
            <logic>
                <behavior>editable</behavior>
                <behavior>required</behavior>
            </logic>
        </dataRef>
        <dataRef>
            <id>streetnumber</id>
            <logic>
                <behavior>editable</behavior>
                <behavior>required</behavior>
            </logic>
        </dataRef>
        <dataRef>
            <id>postal</id>
            <logic>
                <behavior>editable</behavior>
                <action trigger="set">
                    field: f.this,
                    city: f.city;
                    change city choices {
                    def postals = psc byCode,field.value;
                    return postals.collect({it.city}).unique();
                    }
                </action>
            </logic>
        </dataRef>
        <dataRef>
            <id>city</id>
            <logic>
                <behavior>editable</behavior>
            </logic>
        </dataRef>
        <dataRef>
            <id>type</id>
            <logic>
                <behavior>editable</behavior>
                <behavior>required</behavior>
            </logic>
        </dataRef>
    </transition>
</document>