<?xml version="1.0" encoding="UTF-8"?>
<document xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../petriflow_schema.xsd">
	<id>org_group</id>
	<version>1.0.0</version>
	<initials>GRP</initials>
	<title>Organization group</title>
	<icon>home</icon>
	<defaultRole>true</defaultRole>
	<transitionRole>false</transitionRole>
	<!-- TRANSACTIONS -->
	<!-- ROLES -->
	<!-- DATA -->
	<data type="text">
		<id>group_id</id>
		<title name="group_id">Group ID</title>
		<placeholder name="group_id_placeh">Enter group ID</placeholder>
		<desc name="group_id_desc">ID of organization group</desc>
		<action trigger="get">
			id: f.group_id;
			change id value { useCase.stringId }
		</action>
	</data>
	<data type="text">
		<id>group_name</id>
		<title name="group_name">Group name</title>
		<placeholder name="group_name_placeh">Enter group name</placeholder>
		<desc name="group_name_desc">Name of organization group</desc>
		<action trigger="set">
			name: f.group_name;
			useCase.setTitle(name.value)
			workflowService.save(useCase)
		</action>
	</data>
	<data type="user">
		<id>user_selection</id>
		<title name="user_selection">Select user</title>
		<placeholder name="user_selection_placeh">No user selected</placeholder>
		<desc name="user_selection_desc">Select user to be added as a group member</desc>
		<action trigger="get">
			userField: f.user_selection;
			change userField value { null }
		</action>
		<action trigger="set">
			selection: f.members,
			userField: f.user_selection;
			change selection options {  nextGroupService.addUser(userField.value, selection.options) }
		</action>
	</data>
	<data type="multichoice_map">
		<id>members</id>
		<title name="members">Members</title>
		<desc name="members_desc">Members of current organization group</desc>
		<options/>
		<view>
			<list></list>
		</view>
	</data>
	<!-- I18NS -->
	<i18n locale="sk">
		<i18nString name="group_id">ID grupy</i18nString>
		<i18nString name="group_id_desc">ID organizačnej grupy</i18nString>
