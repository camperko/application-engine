			</actions>
			<actions phase="post">
				<action>
					impersonated: f.impersonated;

					impersonationService.endImpersonation(impersonated.value.id)
				</action>
				<action>
					is_active: f.is_active;

					change is_active value { true }
				</action>
			</actions>
		</event>
