<document xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../petriflow_schema.xsd">
    <id>dynamic_init</id>
    <title>dynamic_init</title>
    <defaultRole>true</defaultRole>
    <initials>DVT</initials>
    <!-- ROLES -->
    <data type="text" immediate="true">
        <id>text</id>
        <title>Text</title>
        <init>${userService.loggedOrSystem.name}</init>
    </data>

    <transition>
        <id>transition</id>
        <x>200</x>
        <y>200</y>
        <label>Transition</label>
        <assignPolicy>auto</assignPolicy>

        <dataRef>
            <id>text</id>
            <logic>
                <behavior>editable</behavior>
            </logic>
        </dataRef>
    </transition>

</document>